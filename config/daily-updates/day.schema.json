{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://acedata.cloud/schemas/roadmap/daily-updates/day.schema.json",
  "title": "Ace Data Cloud Roadmap Daily Updates Day File",
  "type": "object",
  "additionalProperties": false,
  "required": ["date", "items"],
  "properties": {
    "$schema": { "type": "string" },
    "date": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["title", "url"],
        "properties": {
          "title": { "type": "string", "minLength": 1 },
          "url": { "type": "string", "format": "uri" },
          "summary": { "type": "string" },
          "tags": {
            "type": "array",
            "items": { "type": "string", "minLength": 1 },
            "uniqueItems": true
          }
        }
      }
    }
  }
}

