{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://acedata.cloud/schemas/roadmap/daily-updates/index.schema.json",
  "title": "Ace Data Cloud Roadmap Daily Updates Index",
  "type": "object",
  "additionalProperties": false,
  "required": ["title", "subtitle", "initial_open_days", "page_size_days", "days"],
  "properties": {
    "$schema": { "type": "string" },
    "title": { "type": "string", "minLength": 1 },
    "subtitle": { "type": "string" },
    "initial_open_days": { "type": "integer", "minimum": 0, "default": 3 },
    "page_size_days": { "type": "integer", "minimum": 1, "default": 20 },
    "days": {
      "type": "array",
      "items": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
      "uniqueItems": true
    }
  }
}

