{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://acedata.cloud/schemas/roadmap.schema.json",
  "title": "Ace Data Cloud Roadmap Config",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "site",
    "nav",
    "hero",
    "overview",
    "intro",
    "guiding_principles",
    "what_building",
    "phases",
    "daily_updates",
    "token_fit",
    "closing",
    "footer"
  ],
  "properties": {
    "site": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "page_title", "tagline"],
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "page_title": { "type": "string", "minLength": 1 },
        "tagline": { "type": "string", "minLength": 1 },
        "description": { "type": "string" },
        "url": { "type": "string" }
      }
    },
    "nav": {
      "type": "array",
      "items": { "$ref": "#/$defs/navItem" }
    },
    "hero": {
      "type": "object",
      "additionalProperties": false,
      "required": ["eyebrow", "title", "subtitle", "background_image", "primary_cta", "secondary_cta"],
      "properties": {
        "eyebrow": { "type": "string", "minLength": 1 },
        "title": { "type": "string", "minLength": 1 },
        "subtitle": { "type": "string", "minLength": 1 },
        "background_image": { "type": "string", "minLength": 1 },
        "primary_cta": { "$ref": "#/$defs/link" },
        "secondary_cta": { "$ref": "#/$defs/link" }
      }
    },
    "overview": {
      "type": "object",
      "additionalProperties": false,
      "required": ["title", "sequence", "paragraphs", "priorities"],
      "properties": {
        "title": { "type": "string", "minLength": 1 },
        "sequence": { "type": "string", "minLength": 1 },
        "paragraphs": { "type": "array", "items": { "type": "string" } },
        "priorities": { "type": "array", "items": { "type": "string" } }
      }
    },
    "intro": {
      "type": "object",
      "additionalProperties": false,
      "required": ["title", "subtitle", "cards"],
      "properties": {
        "title": { "type": "string", "minLength": 1 },
        "subtitle": { "type": "string", "minLength": 1 },
        "cards": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["title", "paragraphs"],
            "properties": {
              "title": { "type": "string", "minLength": 1 },
              "paragraphs": { "type": "array", "items": { "type": "string" } },
              "bullets": { "type": "array", "items": { "type": "string" } },
              "links": { "type": "array", "items": { "$ref": "#/$defs/link" } }
            }
          }
        }
      }
    },
    "founder": {
      "type": "object",
      "additionalProperties": false,
      "required": ["title", "subtitle", "name", "avatar_url", "introductions"],
      "properties": {
        "title": { "type": "string", "minLength": 1 },
        "subtitle": { "type": "string", "minLength": 1 },
        "name": { "type": "string", "minLength": 1 },
        "avatar_url": { "type": "string", "minLength": 1 },
        "github": { "$ref": "#/$defs/link" },
        "x": { "$ref": "#/$defs/link" },
        "contribution_image_url": { "type": "string" },
        "introductions": { "type": "array", "items": { "type": "string" } }
      }
    },
    "revenue": {
      "type": "object",
      "additionalProperties": false,
      "required": ["title", "subtitle", "source", "currency"],
      "properties": {
        "title": { "type": "string", "minLength": 1 },
        "subtitle": { "type": "string", "minLength": 1 },
        "source": { "type": "string", "minLength": 1 },
        "currency": { "type": "string", "minLength": 1 }
      }
    },
    "guiding_principles": {
      "type": "object",
      "additionalProperties": false,
      "required": ["title", "items"],
      "properties": {
        "title": { "type": "string", "minLength": 1 },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["title", "description"],
            "properties": {
              "title": { "type": "string", "minLength": 1 },
              "description": { "type": "string", "minLength": 1 }
            }
          }
        }
      }
    },
    "what_building": {
      "type": "object",
      "additionalProperties": false,
      "required": ["title", "intro_paragraphs", "sections"],
      "properties": {
        "title": { "type": "string", "minLength": 1 },
        "intro_paragraphs": { "type": "array", "items": { "type": "string" } },
        "sections": {
          "type": "array",
          "items": { "$ref": "#/$defs/contentSection" }
        }
      }
    },
    "phases": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/phase" }
    },
    "daily_updates": {
      "type": "object",
      "additionalProperties": false,
      "required": ["source"],
      "properties": {
        "source": { "type": "string", "minLength": 1 }
      }
    },
    "token_fit": {
      "type": "object",
      "additionalProperties": false,
      "required": ["title", "paragraphs", "bullets"],
      "properties": {
        "title": { "type": "string", "minLength": 1 },
        "paragraphs": { "type": "array", "items": { "type": "string" } },
        "bullets": { "type": "array", "items": { "type": "string" } }
      }
    },
    "closing": {
      "type": "object",
      "additionalProperties": false,
      "required": ["title", "paragraphs", "bullets", "final_line"],
      "properties": {
        "title": { "type": "string", "minLength": 1 },
        "paragraphs": { "type": "array", "items": { "type": "string" } },
        "bullets": { "type": "array", "items": { "type": "string" } },
        "final_line": { "type": "string", "minLength": 1 }
      }
    },
    "footer": {
      "type": "object",
      "additionalProperties": false,
      "required": ["brand", "columns", "bottom"],
      "properties": {
        "brand": {
          "type": "object",
          "additionalProperties": false,
          "required": ["title", "lines"],
          "properties": {
            "title": { "type": "string", "minLength": 1 },
            "lines": { "type": "array", "items": { "$ref": "#/$defs/footerLine" } }
          }
        },
        "columns": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["title", "links"],
            "properties": {
              "title": { "type": "string", "minLength": 1 },
              "links": { "type": "array", "items": { "$ref": "#/$defs/link" } }
            }
          }
        },
        "bottom": {
          "type": "object",
          "additionalProperties": false,
          "required": ["copyright_text", "secondary_text", "secondary_href"],
          "properties": {
            "copyright_text": { "type": "string", "minLength": 1 },
            "secondary_text": { "type": "string", "minLength": 1 },
            "secondary_href": { "type": "string", "minLength": 1 }
          }
        }
      }
    }
  },
  "$defs": {
    "link": {
      "type": "object",
      "additionalProperties": false,
      "required": ["label", "href"],
      "properties": {
        "label": { "type": "string", "minLength": 1 },
        "href": { "type": "string", "minLength": 1 },
        "new_tab": { "type": "boolean", "default": false }
      }
    },
    "navItem": {
      "type": "object",
      "additionalProperties": false,
      "required": ["label", "href"],
      "properties": {
        "label": { "type": "string", "minLength": 1 },
        "href": { "type": "string", "minLength": 1 },
        "new_tab": { "type": "boolean", "default": false },
        "primary": { "type": "boolean", "default": false }
      }
    },
    "contentSection": {
      "type": "object",
      "additionalProperties": false,
      "required": ["title", "paragraphs"],
      "properties": {
        "title": { "type": "string", "minLength": 1 },
        "paragraphs": { "type": "array", "items": { "type": "string" } },
        "bullets": { "type": "array", "items": { "type": "string" } },
        "subsections": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["title", "paragraphs"],
            "properties": {
              "title": { "type": "string", "minLength": 1 },
              "paragraphs": { "type": "array", "items": { "type": "string" } },
              "bullets": { "type": "array", "items": { "type": "string" } }
            }
          }
        }
      }
    },
    "phase": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "label", "title", "focus", "accent", "icon", "groups"],
      "properties": {
        "id": { "type": "string", "pattern": "^[a-z0-9-]+$" },
        "label": { "type": "string", "minLength": 1 },
        "title": { "type": "string", "minLength": 1 },
        "focus": { "type": "string", "minLength": 1 },
        "date_range": { "type": "string" },
        "status_note": { "type": "string", "minLength": 1 },
        "accent": { "type": "string", "minLength": 1 },
        "icon": { "type": "string", "minLength": 1 },
        "groups": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/phaseGroup" }
        }
      }
    },
    "phaseGroup": {
      "type": "object",
      "additionalProperties": false,
      "required": ["title", "items"],
      "properties": {
        "title": { "type": "string", "minLength": 1 },
        "items": {
          "type": "array",
          "items": { "$ref": "#/$defs/task" }
        }
      }
    },
    "task": {
      "type": "object",
      "additionalProperties": false,
      "required": ["title", "status"],
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string", "minLength": 1 },
        "status": { "type": "string", "enum": ["done", "in_progress", "planned"] },
        "note": { "type": "string" },
        "target_at": { "$ref": "#/$defs/isoDateNullable" },
        "completed_at": { "$ref": "#/$defs/isoDateNullable" }
      }
    },
    "isoDateNullable": {
      "anyOf": [
        { "type": "string", "format": "date" },
        { "type": "null" }
      ]
    },
    "footerLine": {
      "type": "object",
      "additionalProperties": false,
      "required": ["icon", "text"],
      "properties": {
        "icon": { "type": "string", "minLength": 1 },
        "text": { "type": "string", "minLength": 1 },
        "href": { "type": "string" }
      }
    }
  }
}
