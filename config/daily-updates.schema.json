{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://acedata.cloud/schemas/daily-updates.schema.json",
  "title": "Ace Data Cloud Daily Updates",
  "type": "object",
  "additionalProperties": false,
  "required": ["title", "subtitle", "initial_visible", "items"],
  "properties": {
    "title": { "type": "string", "minLength": 1 },
    "subtitle": { "type": "string", "minLength": 1 },
    "initial_visible": { "type": "integer", "minimum": 1, "maximum": 60, "default": 7 },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["date", "title", "url"],
        "properties": {
          "date": { "type": "string", "format": "date" },
          "title": { "type": "string", "minLength": 1 },
          "url": { "type": "string", "minLength": 1 },
          "summary": { "type": "string" },
          "tags": { "type": "array", "items": { "type": "string" } }
        }
      }
    }
  }
}

